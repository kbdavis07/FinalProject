            @Html.LabelFor(model => model.MailRecipientId, "MailRecipientId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MailRecipientId", String.Empty)
                @Html.ValidationMessageFor(model => model.MailRecipientId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SentToMail, htmlAttributes: new { @class = "control-label col-md-2" })
